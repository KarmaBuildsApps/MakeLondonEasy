<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/_6sdp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/llCardViewList"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_70sdp"
            android:orientation="horizontal"
            android:padding="@dimen/_5sdp"
            android:weightSum="100">

            <TextView
                android:id="@+id/tvLineNameColor"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="30"
                android:background="@color/colorDlr"
                android:gravity="center"/>

            <TextView
                android:id="@+id/tvLineStatus"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="70"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llExpandableView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/llCardViewList"
            android:minHeight="@dimen/_100sdp"
            android:orientation="vertical"
            android:padding="@dimen/_16sdp">

            <TextView
                android:id="@+id/tvStatusDetail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center" />
        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>